{{!-- Add layout --}}

{{!< default}}

{{^is "paged"}}
	<section id="cover" class="cover u-flex-wrap" style="min-height:100vh">
		{{#if @blog.cover}}<div class="cover-background" style="background-image: url({{@blog.cover}})"></div>{{/if}}
		<div class="cover-wrap u-flex-aling-center">
			{{!-- Blog name --}}
			<h1 id="title-home" class="cover-title animated bounceInDown">{{@blog.title}}</h1>
			{{!-- Blog description --}}
			<p class="cover-description animated bounceIn">{{@blog.description}}</p>
			{{! The tag below includes the post loop - partials/loop.hbs }}
			{{> "loop"}}
		</div>
		<a href="#ScrollBody" class="scrolltop mouse u-h-b-lg"><span class="scroll"></span></a>
	</section>
	<section id="under-cover">
		<div class="row">
			
			{{#get "tags" limit="all"}}
				{{#foreach tags}}
					<div class="col s3">
					<div class="card">  
						<div class="card-container">
							<h3 class="tag-header"><i class="fa fa-tag">&nbsp;&nbsp;</i>{{name}}</h3>
							{{#get "posts" filter="tags:{{name}}"}}				
								<ul class="card-ul">
								{{#foreach posts limit="5"}}
									<li><a href="{{url}}">{{title}}</a></li>
									{{!-- <p>{{excerpt words="10"}}</p> --}}
								{{/foreach}}
								</ul>
							{{/get}}
						</div>
					</div>
					</div>
				{{/foreach}}
				{{/get}}
										
		</div>
	</section>
{{/is}}


